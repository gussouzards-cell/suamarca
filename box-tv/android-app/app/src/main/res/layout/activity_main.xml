<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rádio Indoor"
            android:textColor="#FFFFFF"
            android:textSize="42sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="40dp" />

        <!-- Dados do Dispositivo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DADOS DO DISPOSITIVO"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/deviceUuidText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UUID: Carregando..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/deviceNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: -"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/deviceModelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modelo: -"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/deviceMacText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC Address: Carregando..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="monospace" />

        <!-- Status do Player -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS DO PLAYER"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/playerStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Verificando..."
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/streamingUrlText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL: -"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:maxLines="3"
            android:ellipsize="middle" />

        <TextView
            android:id="@+id/volumeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume: -"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Contato -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contato: (11) 95038-0410"
            android:textColor="#9E9E9E"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="32dp" />

        <!-- WebView para Player -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAYER WEB"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <WebView
            android:id="@+id/webViewPlayer"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#1E1E1E"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>


